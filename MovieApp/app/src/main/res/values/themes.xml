<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_sf_pro_display_regular</item>
    </style>

    <style name="Widget.MyApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="PlayMovieTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" >
        <item name="android:fontFamily">@font/font_sf_pro_display_regular</item>
    </style>

    <style name="roundedImageRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedBorderPoster">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/review_popup_animation</item>
        <!-- Define exit animation if needed -->
    </style>

    <style name="forward_btn_bg">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>

    <style name="rewind_btn_bg">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="MyTabTextAppearance" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
</resources>