<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".views.home.homePages.userTab.UserInfomation.UserInfomation"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-73dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dark_gray"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn_lg_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:rotationY="180"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/inter"
            android:text="@string/your_information"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_user_info"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/avater_border3"
            app:layout_constraintEnd_toEndOf="@id/avater_border3"
            app:layout_constraintStart_toStartOf="@id/avater_border3"
            app:layout_constraintTop_toTopOf="@id/avater_border3"
            app:shapeAppearanceOverlay="@style/roundedImageRounded"></com.google.android.material.imageview.ShapeableImageView>

        <ImageView
            android:id="@+id/avater_border3"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avater_border3">

            <Button
                android:id="@+id/choose_avatar_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="@color/bright_gray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose Image"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/apply_avatar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="@color/neon_blue"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <LinearLayout
            android:id="@+id/user_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/password_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sms_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Phone number"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sms_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facebook_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bright_gray"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/facebook_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/google_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bright_gray"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Google"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/google_txt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text="Alex******"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>